<?xml version="1.0" encoding="UTF-8"?>
<suite name="SeleniumFunctionalSuite" parallel="false">
    
    <test name="ChromeTests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.qa.automation.tests.RegisterTests"/>
            <class name="com.qa.automation.tests.LoginTests"/>
            <class name="com.qa.automation.tests.InventoryTests"/>
        </classes>
    </test>
    
    <test name="FirefoxTests" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.qa.automation.tests.RegisterTests"/>
            <class name="com.qa.automation.tests.LoginTests"/>
            <class name="com.qa.automation.tests.InventoryTests"/>
        </classes>
    </test>
    
</suite>

